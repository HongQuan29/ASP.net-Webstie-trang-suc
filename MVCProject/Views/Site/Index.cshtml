@model IEnumerable<MVCProject.Models.Category>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("MainMenu", "Module")

<!-- list category & sliser-->
<section class="container-fluid">
    <div>
        <div class="container pt-3">
            <div class="row">
                <!-- listcategory-->
                <div class="col-md-4 w-100">
                    @Html.Action("ListCategory","Module")
                </div>
                <div class="col-md-8">
                    @Html.Action("Slider","Module")
                </div>
            </div>
        </div>
    </div>
    @*@Html.Partial("~/Views/Module/_ServiceCustomer.cshtml")*@
</section>

<section class="container-fluid pt-3">
    <div class="container ">
        <div class="card">
            <h3 class="card-header text-xanhduong bg-white">Sản Phẩm Khuyến mãi</h3>
            <div class="card-body">
                <div class="row">
                    @Html.Action("SaleProduct", "Product")
                </div>
            </div>
        </div>
    </div>
</section>
<section class="container-fluid pt-3">
    <div class="container ">
        <div class="card">
            <h3 class="card-header text-xanhduong bg-white">Sản Phẩm Mới</h3>
            <div class="card-body">
                <div class="row">
                    @Html.Action("NewProduct", "Product")
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container-fluid pt-3">
    <div class="container ">
        <div class="card">
            <h3 class="card-header text-xanhduong bg-white">Sản Phẩm Bán chạy</h3>
            <div class="card-body">
                <div class="row">
                    @Html.Action("BestSellerProduct", "Product")
                </div>
            </div>
        </div>
    </div>
</section>
<div id="fb-root"></div>

